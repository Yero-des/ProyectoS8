extends layouts/layout

block content   
  .container.mt-5
    h1 Editar Post

    form(action=`/posts/update/${post._id}` method="POST")
      .form-group.mb-3 
        label(for="titulo" class="form-label") Título:
        input(type="text" name="titulo" class="form-control" value=`${post.titulo}`)

      .form-group.mb-3 
        label(for="descripcion" class="form-label") Descripción:
        textarea(name="descripcion" class="form-control") #{post.descripcion}
      .form-group.mb-3 
        label(for="categoria" class="form-label") Categoría:
        input(type="text" name="categoria" class="form-control" value=`${post.categoria}`)

      .form-group.mb-3 
        label(for="fecha" class="form-label") Fecha:
        input(type="date" name="fecha" class="form-control" value=`${post.fecha}`)

      .form-group.mt-3
        button(type="submit" class="btn btn-primary") Editar Post
