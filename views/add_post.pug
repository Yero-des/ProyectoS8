extends layouts/layout

block content 
  .container.mt-5
    h1 Crear Nuevo Post

    form(action="/posts/create", method="POST")
      .mb-3
        label(for="titulo" class="form-label") Título:
        input(type="text", name="titulo", class="form-control", required)

      .mb-3
        label(for="descripcion" class="form-label") Descripción:
        textarea(name="descripcion", class="form-control", required)

      .mb-3
        label(for="categoria" class="form-label") Categoría:
        input(type="text", name="categoria", class="form-control", required)

      .mb-3
        label(for="fecha" class="form-label") Fecha:
        input(type="date", name="fecha", class="form-control", required)

      .mb-3
        button(type="submit", class="btn btn-primary") Crear Blog